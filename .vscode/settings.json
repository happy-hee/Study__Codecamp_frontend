{
  // 테마
  "workbench.colorTheme": "Default Dark+",
  // 폰트
  "editor.fontFamily": "Pretendard, Consolas, 'Courier New', monospace",
  // 폰트 크기
  "editor.fontSize": 14,
  // 터미널 폰트
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  // 줄간격
  "editor.lineHeight": 1.4,
  // 자간
  "editor.letterSpacing": 1.2,
  // 아이콘 테마
  "workbench.iconTheme": "material-icon-theme",
  // 탭 띄어쓰기 간격
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.printWidth": 180,

  // 탭 색상
  "workbench.colorCustomizations": {
    // 탭 활성화
    "editorIndentGuide.activeBackground1": "#ffe711",
    "editorIndentGuide.activeBackground2": "#1eff00",
    "editorIndentGuide.activeBackground3": "#ff31ff",
    "editorIndentGuide.activeBackground4": "#a113ff",

    // 탭 비활성화
    "editorIndentGuide.background1": "#ececec2a",
    "editorIndentGuide.background2": "#ececec2a",
    "editorIndentGuide.background3": "#ececec2a",
    "editorIndentGuide.background4": "#ececec2a",

    // 커서 색상
    "editorCursor.foreground": "#ff00d4"
  }

